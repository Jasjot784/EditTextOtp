<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="@drawable/border"
        android:foregroundGravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_code"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:lines="2"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/textminiBlack"
        app:layout_constraintTop_toBottomOf="@id/guide0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="A code has been sent to +332345567888"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/guide1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et1"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/et2"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/et3"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/et4"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/textmini2Black"
        android:text="@string/resend_code"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2229"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".43"/>



</androidx.constraintlayout.widget.ConstraintLayout>